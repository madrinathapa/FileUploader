        var reEnterPassword = $("#txtReEnterPassword").val();
        var userHashCode = $("#hdnUserHashCode").val();

        if (newPassword != "" && currentPassword != "" && reEnterPassword != "") {
            if (newPassword == reEnterPassword && newPassword != currentPassword) {
